{
  "name": "nuxt-ecosystem-ci",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.18.1",
  "description": "Nuxt Ecosystem CI",
  "license": "MIT",
  "homepage": "https://github.com/nuxt/ecosystem-ci#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt/ecosystem-ci.git"
  },
  "bugs": {
    "url": "https://github.com/nuxt/ecosystem-ci/issues"
  },
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc",
    "test:self": "pnpm test _selftest",
    "test": "node --experimental-strip-types --disable-warning=ExperimentalWarning ecosystem-ci.ts",
    "bisect": "pnpm test bisect"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cac": "^6.7.14",
    "execa": "^9.6.0",
    "node-fetch-native": "^1.6.7",
    "ofetch": "^1.4.1",
    "std-env": "^3.9.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.18.8",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-plugin-n": "^17.23.1",
    "lint-staged": "^16.2.3",
    "semver": "^7.7.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yaml}": [
      "eslint --fix"
    ]
  }
}
