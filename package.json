{
  "name": "nuxt-ecosystem-ci",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.12.1",
  "description": "Nuxt Ecosystem CI",
  "license": "MIT",
  "homepage": "https://github.com/nuxt/ecosystem-ci#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt/ecosystem-ci.git"
  },
  "bugs": {
    "url": "https://github.com/nuxt/ecosystem-ci/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc",
    "test:self": "pnpm test _selftest",
    "test": "node --experimental-strip-types --disable-warning=ExperimentalWarning ecosystem-ci.ts",
    "bisect": "pnpm test bisect"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cac": "^6.7.14",
    "changelogen": "^0.5.7",
    "execa": "^9.6.0",
    "node-fetch-native": "^1.6.6",
    "ofetch": "^1.4.1",
    "std-env": "^3.9.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.15.31",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-plugin-n": "^17.19.0",
    "lint-staged": "^15.5.2",
    "semver": "^7.7.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yaml}": [
      "eslint --fix"
    ]
  }
}
