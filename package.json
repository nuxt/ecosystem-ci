{
  "name": "nuxt-ecosystem-ci",
  "version": "0.0.1",
  "description": "Nuxt Ecosystem CI",
  "scripts": {
    "prepare": "pnpm exec simple-git-hooks",
    "lint": "eslint --ignore-path .gitignore '**/*.ts'",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc",
    "format": "prettier --ignore-path .gitignore --check .",
    "format:fix": "pnpm format --write",
    "test:self": "tsx ecosystem-ci.ts _selftest",
    "test": "tsx ecosystem-ci.ts",
    "bisect": "tsx ecosystem-ci.ts bisect"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.4.0",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": "^9.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt/ecosystem-ci.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuxt/ecosystem-ci/issues"
  },
  "homepage": "https://github.com/nuxt/ecosystem-ci#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "cac": "^6.7.14",
    "execa": "^9.2.0",
    "node-fetch-native": "^1.6.4",
    "ofetch": "^1.3.4",
    "std-env": "^3.7.0"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/node": "^20.14.5",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-n": "^17.9.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "semver": "^7.6.2",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5"
  }
}
